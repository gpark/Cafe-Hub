<h3>Create New Assignment</h3>
<div class="row"><div class="col-md-6">
<div class="panel panel-default"><div class="panel-body">
    <%= form_for @assignment do |f| %>
      <%= f.label "Week of: " %>
      <%= f.select :assignments_week_id, @assignments_weeks, {}, {class: "form-control", style: "width:250px;display:inline"} %>
      <%= f.label "Facility: " %>
      <%= f.select :facility_id, @facilities, {}, {class: "form-control", style: "width:100px;display:inline"} %>
      <%= f.label "Worker: " %>
      <%= f.select :user_id, @users, {}, {class: "form-control", style: "width:135px;display:inline"} %>
      <br><br>
      <%= f.nested_fields_for :occurences, wrapper_options: {class:'form_inline'} do |eo| %>
            &emsp;  &emsp;
            <label class="checkbox-inline">
            <%= eo.check_box :su %> Su
            </label>
            <label class="checkbox-inline">
            <%= eo.check_box :m %> M
            </label>
            <label class="checkbox-inline">
            <%= eo.check_box :tu %> Tu
            </label>
            <label class="checkbox-inline">
            <%= eo.check_box :w %> W
            </label>
            <label class="checkbox-inline">
            <%= eo.check_box :th %> Th
            </label>
            <label class="checkbox-inline">
            <%= eo.check_box :f %> F
            </label>
            <label class="checkbox-inline">
            <%= eo.check_box :sa %> Sa &nbsp; &nbsp;
            </label>
            <%= eo.select(:start_time, @start_times, {}, {class: "form-control", style: "width:135px;display:inline", id:"Start Time"}) %>
            <%= eo.select(:end_time, @end_times, {}, {class: "form-control", style: "width:135px;display:inline", id:"End Time"}) %>
            <div align="right"><%= eo.remove_nested_fields_link 'Remove Occurence' %></div>
      <% end %>
      <%= f.add_nested_fields_link :occurences, 'Add Occurence' %>
      <br><br>
      <%= f.submit "Create", class:"btn btn-default" %>
    <% end %>
</div></div></div></div>