<h3>Create New Assignment</h3>
<div class="row"><div class="col-md-6">
<div class="panel panel-default"><div class="panel-body">
    <%= form_for @assignment do |f| %>
      <%= f.label "Week of: " %>
      <%= f.select :assignments_week_id, @assignments_weeks, {}, {class: "form-control", style: "width:250px;display:inline"} %>
      <%= f.label "Facility: " %>
      <%= f.select :facility_id, @facilities, {}, {class: "form-control", style: "width:100px;display:inline"} %>
      <%= f.label "Worker: " %>
      <%= f.select :user_id, @users, {}, {class: "form-control", style: "width:135px;display:inline"} %>
      <br>
      <%= f.label "Day: " %>
      <%= f.select :day, @days, {}, {class: "form-control", style: "width:50px;display:inline"} %>
      <%= f.label "Start Time: " %>
      <%= f.select(:start_time, @times, {}, {class: "form-control", style: "width:135px;display:inline", id:"Start Time"}) %>
      <%= f.label "End Time: " %>
      <%= f.select(:end_time, @times, {}, {class: "form-control", style: "width:135px;display:inline", id:"End Time"}) %>
      <%= f.submit "Create", class:"btn btn-default" %>
    <% end %>
</div></div></div></div>